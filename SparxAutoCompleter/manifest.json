{
    "manifest_version": 3,
    "name": "Sparx Auto-Completer",
    "version": "1.0",
    "description": "Automatically completes Sparx Math questions",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["*://*.sparx.co.uk/*", "*://*.sparxmaths.uk/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://*.sparx.co.uk/*", "*://*.sparxmaths.uk/*"],
            "js": ["content.js"]
        }
    ]
}